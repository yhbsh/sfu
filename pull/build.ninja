cc = clang

cflags = -O2
ldflags = -lraylib -lavcodec -lavformat -lvpx -lswresample -lswscale -lavutil -framework VideoToolbox -framework AVFoundation -framework CoreVideo -framework CoreMedia -framework CoreFoundation

rule cc
  command = $cc $cflags $in -o $out $ldflags
  description = CC $out

build main: cc main.c

default main
